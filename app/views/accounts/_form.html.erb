<%= form_with(model: account, local: true, html: { 
  data: { 
    controller: "account-balance",
    action: "submit->account-balance#submitForm"
  }
}) do |form| %>
  <% if account.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>
      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :balance, class: "form-label" %>
    <%= form.number_field :balance, step: 0.01, class: "form-control", 
        data: { account_balance_target: "balance" } %>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <%= form.submit "Save Changes", class: "btn btn-primary", style: "width: 100%;" %>
  </div>
<% end %>