<p style="color: green"><%= notice %></p>

<div class="container mt-4">
  <h1 class="text-center"><%= @account.name %> - Transaction Details</h1>
  <div class="card">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Amount</th>
            <th scope="col">Type</th>
            <th scope="col" class="text-right">Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= number_to_currency(@transaction.amount) %></td>
            <td><%= @transaction.transaction_type %></td>
            <td class="text-right"><%= @transaction.created_at.strftime('%m/%d/%y') %></td>
          </tr>
        </tbody>
      </table>
      <p><strong>Notes:</strong> <%= @transaction.notes %></p>
      <% if @transaction.document.attached? %>
        <p><strong>Document:</strong></p>
        <%= image_tag url_for(@transaction.document), class: "img-fluid" %>
      <% end %>
      <div class="mt-3">
        <%= link_to "Edit this transaction", edit_account_transaction_path(@account, @transaction), class: "btn btn-info me-2" %>
        <%= button_to "Destroy this transaction", account_transaction_path(@account, @transaction), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <div class="fixed-bottom">
    <div class="d-flex justify-content-center mb-3">
      <%= link_to "Back to transactions", account_transactions_path(@account), class: "btn btn-secondary" %>
    </div>
  </div>
</div>