<%= form_with(model: [@account, @income], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :source %>
      <%= form.text_field :source, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, step: 0.01, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
<% end %>
<%= link_to 'Back to Budget', account_budget_path(@account), class: 'btn btn-light' %>
  